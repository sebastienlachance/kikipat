  </div>
  <div class="gift_info" style="float:left">
    <h2><%= @gift.name %></h2>
    <span><%= number_to_currency(@gift.price, :unit => '$') %></span>
  </div>
</div>
<br class="clear" />

<p>
  <%= @gift.description %>
</p>

<br /><br />

