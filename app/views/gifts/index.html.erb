
<h2>Entre 0$ et 25$</h2>
<table>
<% @gifts_less_than_25.each do |gift| %>
  <tr>
    <% if gift.reserved.nil? || !gift.reserved   %>
      <td>
        <img src="/assets/accept.png" /> 
      </td>
    <% else %>
      <td>
        <img src="/assets/block.png" /> 
      </td>
    <% end %>
      <td><%= link_to gift.name, gift %></td>
    <td><%= number_to_currency(gift.price, :unit => '$') %></td>
  </tr>
<% end %>
</table>

